[MASTER]
ignore=migrations
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    no-member,
    invalid-name,
    duplicate-code,
    C0114, C0115, C0116,
    R0903, W0613, R0801

[FORMAT]
max-line-length=88

[TYPECHECK]
generated-members=objects,does_not_exist

[DESIGN]
max-args=5
max-locals=15

[REPORTS]
output-format=colorized
score=yes
fail-under=8.0